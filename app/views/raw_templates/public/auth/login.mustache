+++
base: skeleton_empty
styles: "@import url(http://fonts.googleapis.com/css?family=Maven+Pro:700);

      html,body {
        height:100%;
      }

      .container-full h1 {
        font-size:80px;
      }

      /* Custom container */
      .container-full {
        margin: 0 auto;
        width: 100%;
        min-height:100%;
        overflow:hidden;
      }

      .v-center {
        margin-top:7%;
      }

      .popover-title, .popover-content {
        color: black;
      }"
+++
    <div class="container-full">
      <div class="row">
        <div class="col-lg-12 text-center v-center">
          <h1>Hello There</h1>
          <p class="lead">Psh PaaS requires you to be logged in... <a href="#about">What is Psh PaaS?</a></p>
          <br><br>
          {{^banError}}
          <form class="col-md-4 col-md-offset-4" action="/login" method="POST">
            {{^usernameError}}
              <div class="form-group">
                <input type="text" class="form-control input-lg" placeholder="Username..." name="username" id="username" required autofocus value="{{username}}">
              </div>
            {{/usernameError}}
            {{#usernameError}}
              <div class="form-group has-error">
                <input type="text" class="form-control input-lg " placeholder="Username..." name="username" id="username" required autofocus value="{{username}}">
                <span class="help-block">We couldn't find this username in our system. Are you sure you typed it in correctly?</span>
              </div>
            {{/usernameError}}
            {{^passwordError}}
              <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Password..." name="password" id="password" required>
              </div>
            {{/passwordError}}
            {{#passwordError}}
              <div class="form-group has-error">
                <input type="password" class="form-control input-lg" placeholder="Password..." name="password" id="password" required>
                <span class="help-block">This password doesn't match up with the username! Are you sure it's typed in correctly?</span>
              </div>
            {{/passwordError}}
            <button class="btn btn-lg btn-theme btn-block" type="submit">Login</button>
          </form>
          {{/banError}}
          {{#banError}}
          <h2>We have a problem <i class="icon-meh"></i></h2>
          <p>Your account is currently disabled. Please wait to be contacted by Psh PaaS staff via email before trying to log in again.</p>
          {{/banError}}
        </div>
      </div> <!-- /row -->
      <br><br><br><br>
    </div> <!-- /container full -->

    <div class="container">

      {{{about}}}

      <hr>
      <footer id="footer">
        <div class="row">
          <div class="col-md-6">
            <a href="https://github.com/JoshAshby">JoshAshby - Psh PaaS 2013</a>
            <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-nc-sa/3.0/88x31.png" /></a><br />This work is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-sa/3.0/">Creative Commons Attribution-NonCommercial-ShareAlike 3.0 Unported License</a>.
          </div>
          <div class="col-md-6">
            <p class="pull-right"><a href="#top">Back to top</a></p>
          </div>
        </div>
      </footer>
    </div>
