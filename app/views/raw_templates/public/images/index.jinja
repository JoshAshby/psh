{% if page.pail %}
  <div class="row">
    <div class="col-md-12">
      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
      <br>
      <br>
    </div>
  </div>
{% endif %}

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Rev</th>
          <th>Created</th>
          <th>Status</th>
        </thead>
        <tbody>

        {% for image in page.pail %}
          <tr>
            <td><a href="/images/{{image.id}}">{{image.name}}</a></td>
            <td>{{image.rev}}</td>
            <td>{{image.formated_created}}</td>
            <td></td>
          </tr>
        {% endfor %}

        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Oh...</h1>
        <p>You don't currently have any images! <a href="/new">Maybe upload a Dcokerfile to be built into one?</a></p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
