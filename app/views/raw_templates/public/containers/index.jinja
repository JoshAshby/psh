{% if page.pail %}
  <div class="row">
    <div class="col-md-12">
      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
      <br>
      <br>
    </div>
  </div>
{% endif %}

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Image</th>
          <th>Created</th>
          <th>Status</th>
        </thead>
        <tbody>

        {% for con in page.pail %}
          <tr>
            <td><a href="/containers/{{con.id}}">{{con.name}}</a></td>
            <td><a href="/images/{{con.image.id}}">{{con.image.name}}</a></td>
            <td>{{con.formated_created}}</td>
            <td>{{con.status}}</td>
          </tr>
        {% endfor %}

        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Oh...</h1>
        <p>You don't currently have any containers! <a href="/new/container">Maybe spin one up?</a></p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
