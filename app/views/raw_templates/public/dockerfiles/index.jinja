nav:
  dockerfiles: true
+++
{% if page.pail %}
  <div class="row">
    <div class="col-md-12">
      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
      <br>
      <br>
    </div>
  </div>
{% endif %}

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Owner</th>
          <th>Created</th>
        </thead>
        <tbody>
          {% for dockerfile in page.pail %}
            <tr>
              <td><a href="/dockerfiles/{{dockerfile.id}}">{{dockerfile.name}}</a></td>
              <td>{{dockerfile.author}}</td>
              <td>{{dockerfile.formated_created}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>So sad...</h1>
        <p>We currently don't have any public Dockerfiles to show you!</p>
        {% if req.session.id %}
          <p>Perhaps you should <a href="/dockerfiles/mine">view your own Dockerfiles?</a></p>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
