+++
nav:
  dockerfiles: true
+++
<div class="row">
  <div class="col-md-12">

    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Created</th>
          <th>Status</th>
          <th>Public/Private</th>
        </thead>
        <tbody>
          {% for dockerfile in page.pail %}
            <tr>
              <td><a href="/dockerfiles/{{dockerfile.id}}">{{dockerfile.name}}</a></td>
              <td>{{dockerfile.formated_created}}</td>
              <td>{{ 'Built' if dockerfile.status else 'In Build Queue' }}</td>
              <td><i class="fa fa-{{ 'eye' if dockerfile.public else 'eye-slash' }}"></i></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Oh...</h1>
        <p>You don't currently have any Dockerfiles! <a href="/new">Maybe upload one?</a></p>
      </div>

    {% endif %}

  </div>
</div>
