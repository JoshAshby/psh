<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form method="POST" enctype="multipart/form-data">
      <fieldset>
        <div class="form-group">
          <input type="file" class="form-control" id="file" name="file">
        </div>

        <div class="form-group">
          <input type="text" class="form-control" id="name" name="name" placeholder="Dockerfile Name..." required>
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="public" value="true"> Make this publically viewable?
          </label>
        </div>
        <hr>
        <button class="btn btn-theme btn-block" type="submit">Upload</button>
      </fieldset>
    </form>
  </div>
</div>
