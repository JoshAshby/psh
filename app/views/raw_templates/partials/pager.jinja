{% if show %}
  <ul class="pager">
    <li class="previous {{ 'disabled' if not has_prev }}">
      {% if has_prev %}
        <a href="?page={{page-1}}{{ '&' if query }}{{query}}"><i class="icon-chevron-left"></i> Prev</a>
      {% else %}
        <a><i class="icon-chevron-left"></i> Prev</a>
      {% endif %}
    </li>
    <li class="next {{ 'disabled' if not has_next }}">
      {% if has_next %}
        <a href="?page={{page+1}}{{ '&' if query }}{{query}}">Next <i class="icon-chevron-right"></i></a>
      {% else %}
        <a>Next <i class="icon-chevron-right"></i></a>
      {% endif %}
    </li>
  </ul>
{% endif %}
