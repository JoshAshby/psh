+++
theme_color: orange

nav:
  admin_images: true
+++
<ol class="breadcrumb">
  <li><a href="/admin">Admin</a></li>
  <li class="active">Images</li>
</ol>

{% if page.pail %}
  <div class="row">
    <div class="col-md-12">
      {% if req.getParam("d", True) %}
        <a href="?d=false" class="btn btn-theme btn-sm">Include Disabled</a>
      {% else %}
        <a href="/admin/images" class="btn btn-theme btn-sm">Hide Disabled</a>
      {% endif %}

      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
      <br>
      <br>
    </div>
  </div>
{% endif %}

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Rev</th>
          <th>Owner</th>
          <th>Created</th>
        </thead>
        <tbody>
          {% for image in page.pail %}
            <tr {{ 'class="danger"' if image.disable }}>
              <td><a href="/admin/images/{{image.id}}">{{image.name}}</a></td>
              <td>{{image.rev}}</td>
              <td>{{image.author.username}}</td>
              <td>{{image.formated_created}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>So sad...</h1>
        <p>We currently don't have any Images!</p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
