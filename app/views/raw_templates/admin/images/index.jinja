+++
theme_color: orange
nav: admin_images
breadcrumbs_top: True
+++
<div class="row">
  <div class="col-md-12">
    {% if req.getParam("d", True) %}
      <a href="?d=false" class="btn btn-theme btn-sm">Include Disabled</a>
    {% else %}
      <a href="/admin/images" class="btn btn-theme btn-sm">Hide Disabled</a>
    {% endif %}

    {% if page.pail %}
      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
    {% endif %}
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Rev</th>
          <th>Owner</th>
          <th>Created</th>
          <th>Status</th>
        </thead>
        <tbody>
          {% for image in page.pail %}
            <tr {{ 'class="danger"' if image.disable }}>
              <td><a href="/admin/images/{{image.id}}">{{image.name}}</a></td>
              <td>{{image.rev}}</td>
              <td><a href="/admin/users/{{image.user.id}}">{{image.user.username}}</a></td>
              <td>{{image.formated_created}}</td>
              <td></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>So sad...</h1>
        <p>We currently don't have any Images!</p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
