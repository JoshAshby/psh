+++
theme_color: orange
nav: admin_containers
breadcrumbs_top: True
+++
<div class="row">
  <div class="col-md-12">
    {% if req.getParam("d", True) %}
      <a href="?d=false" class="btn btn-theme btn-sm">Include Disabled</a>
    {% else %}
      <a href="/admin/containers" class="btn btn-theme btn-sm">Hide Disabled</a>
    {% endif %}

    {% if page.pail %}
      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
    {% endif %}
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Image</th>
          <th>User</th>
          <th>Created</th>
          <th>Status</th>
        </thead>
        <tbody>

        {% for con in page.pail %}
          <tr>
            <td><a href="/admin/containers/{{con.id}}">{{con.name}}</a></td>
            <td><a href="/admin/images/{{con.image.id}}">{{con.image.name}}</a></td>
            <td><a href="/admin/users/{{con.user.id}}">{{con.user.username}}</a></td>
            <td>{{con.formated_created}}</td>
            <td>{{con.status}}</td>
          </tr>
        {% endfor %}

        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Oh...</h1>
        <p>You don't currently have any containers! <a href="/new/container">Maybe spin one up?</a></p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
