+++
theme_color: orange

nav:
  admin_dockerfiles: true
+++
<ol class="breadcrumb">
  <li><a href="/admin">Admin</a></li>
  <li class="active">Dockerfiles</li>
</ol>

{% if page.pail %}
  <div class="row">
    <div class="col-md-12">
      {% if req.getParam("d", True) %}
        <a href="?d=false" class="btn btn-theme btn-sm">Include Disabled</a>
      {% else %}
        <a href="/admin/dockerfiles" class="btn btn-theme btn-sm">Hide Disabled</a>
      {% endif %}

      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
      <br>
      <br>
    </div>
  </div>
{% endif %}

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Rev</th>
          <th>Owner</th>
          <th>Created</th>
          <th>Status</th>
          <th>Public/Private</th>
        </thead>
        <tbody>
          {% for dockerfile in page.pail %}
            <tr {{ 'class="danger"' if dockerfile.disable }}>
              <td><a href="/admin/dockerfiles/{{dockerfile.id}}">{{dockerfile.name}}</a></td>
              <td>{{dockerfile.rev}}</td>
              <td>{{dockerfile.author.username}}</td>
              <td>{{dockerfile.formated_created}}</td>
              <td>
                {% if dockerfile.status %}
                  <a href="/admin/images/{{dockerfile.latest_image.id}}"><span class="label label-success"><i class="fa fa-check"></i> Built!</span></a>
                {% else %}
                  <span class="label label-danger"><i class="fa fa-frown-o"></i> In Queue</span>
                {% endif %}
              </td>
              <td><i class="fa fa-{{ 'eye' if dockerfile.public else 'eye-slash' }}"></i></td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>So sad...</h1>
        <p>We currently don't have any Dockerfiles!</p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
