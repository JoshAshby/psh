+++
theme_color: orange
nav:
  admin_users: true
+++
<ol class="breadcrumb">
  <li><a href="/admin">Admin</a></li>
  <li class="active">Users</li>
</ol>

<div class="row">
  <div class="col-md-12">
    {% if req.getParam("d", True) %}
      <a href="?d=false" class="btn btn-theme btn-sm">Include Disabled</a>
    {% else %}
      <a href="/admin/users" class="btn btn-theme btn-sm">Hide Disabled</a>
    {% endif %}

    <form class="form-inline pull-right" role="pagination_options">
      <a href="/admin/users/new" class="btn btn-theme btn-sm">New User</a>
      {{page.options}}
    </form>
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <th></th>
        <th>Username</th>
        <th>Email</th>
        <th>Created</th>
      </thead>
      <tbody>
        {% for user in page.pail %}
          <tr {{ 'class="danger"' if user.disable }}>
            <td><img src="https://gravatar.com/avatar/{{user.gravatar}}?d=mm&s=25" alt="{{user.email}}" class="img-thumbnail"></td>
            <td><a href="/admin/users/{{user.id}}">{{user.username}}</a></td>
            <td>{{user.email}}</td>
            <td>{{user.formated_created}}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
