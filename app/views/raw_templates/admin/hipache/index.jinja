+++
base: skeletons/sidebar
theme_color: orange
nav: admin_hipache
breadcrumbs_top: True
+++

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Quick Hipache Route</h3>
      </div>
      <div class="panel-body">
        <form method="POST" action="/admin/hipache">
          <div class="input-group">
            <input class="form-control" type="text" name="source" placeholder="Route source...">
            <span class="input-group-addon">
              <i class="fa fa-arrow-right"></i>
            </span>
            <input class="form-control" type="text" name="destination" placeholder="Destination...">
            <div class="input-group-btn">
              <button type="submit" class="btn btn-theme">Add Route <i class="fa fa-check"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <form>
      <div class="form-group">
        <div class="input-group">
          <input type="text" class="form-control input-sm" name="q" value="{{ req.getParam("q") }}" placeholder="Search">
          <span class="input-group-btn">
            <button class="btn btn-theme btn-sm" type="submit"><i class="fa fa-search"></i></button>
          </span>
        </div>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    {% if page.pail %}
      <form class="form-inline pull-right" role="pagination_options">
        {{page.options}}
      </form>
    {% endif %}
    <br>
    <br>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {% if page.pail %}
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <th>Name</th>
          <th>Routes</th>
        </thead>
        <tbody>
          {% for route in page.pail %}
            <tr>
              <td><a href="/admin/hipache/{{route.domain}}">{{route.domain}}</a></td>
              <td>{{route.destinations|join(", ")}}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    {% else %}
      <div class="jumbotron">
        <h1>Huh, thats interesting...</h1>
        <p>You don't currently have any routes! <a href="/admin/hipache/new">Make one, perhaps?</a></p>
      </div>
    {% endif %}
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    {{page.paginate}}
  </div>
</div>
